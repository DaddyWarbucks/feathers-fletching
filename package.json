{
  "name": "feathers-fletching",
  "version": "1.12.2",
  "description": "Hooks, services, and plugins for feathers.js",
  "main": "src/",
  "repository": "https://github.com/RubyRubenstahl/feathers-fletching",
  "author": "DaddyWarbucks <techtbeau@gmail.com>",
  "license": "MIT",
  "keywords": [
    "feathers",
    "feathersjs",
    "hooks"
  ],
  "private": false,
  "scripts": {
    "docs:dev": "vuepress dev docs",
    "docs:build": "vuepress build docs",
    "docs:deploy": "sh deploy-docs.sh",
    "lint": "eslint src/.",
    "fixcode": "eslint src/. --fix",
    "mocha": "mocha tests --recursive --exit",
    "mocha:watch": "mocha tests --recursive --watch tests/*.test.js",
    "test": "npm run lint && npm run mocha",
    "release:patch": "npm run test && npm version patch && npm publish",
    "release:minor": "npm run test && npm version minor && npm publish",
    "release:major": "npm run test && npm version major && npm publish"
  },
  "dependencies": {
    "@feathers-plus/batch-loader": "^0.3.6",
    "@feathersjs/errors": "^4.3.4",
    "lru-cache": "^5.1.1",
    "qs": "^6.9.1",
    "unset-value": "^1.0.0"
  },
  "devDependencies": {
    "@feathersjs/feathers": "^4.5.0",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-prettier": "^3.1.1",
    "feathers-memory": "^4.1.0",
    "mocha": "^7.0.0",
    "prettier": "^1.18.2",
    "rate-limiter-flexible": "^2.0.0",
    "vuepress": "^1.2.0"
  },
  "eslintConfig": {
    "extends": [
      "plugin:prettier/recommended"
    ],
    "rules": {
      "prettier/prettier": [
        "warn",
        {
          "trailingComma": "none",
          "singleQuote": true,
          "printWidth": 80
        }
      ]
    },
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "env": {
      "es6": true
    }
  }
}
