{
    "compilerOptions": {
      "baseUrl": ".",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "outDir": "dist",
      "moduleResolution": "Node",
      "target": "ESNext",
      "module": "ESNext",
      "downlevelIteration": true,
      "sourceMap": false,
      "declaration": true,
      "types": ["vitest/globals"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.test.js"]
  }
